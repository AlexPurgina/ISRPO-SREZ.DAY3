<Page x:Class="Library.Views.Pages.PageReader"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Library.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageReader" Loaded="Page_Loaded">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <ComboBox Style="{DynamicResource ComboBoxStyle1}" Height="30" Width="150"></ComboBox>
            <ComboBox Style="{DynamicResource ComboBoxStyle1}" Height="30" Width="150" Margin="20 0 20 0"></ComboBox>
            <ComboBox Style="{DynamicResource ComboBoxStyle1}" Height="30" Width="150"></ComboBox>
        </StackPanel>
        <DataGrid Grid.Row="1" x:Name="DgReaderBook">
            <DataGrid.Columns>
                <DataGridTextColumn></DataGridTextColumn>
                <DataGridTextColumn></DataGridTextColumn>
                <DataGridTextColumn></DataGridTextColumn>
                <DataGridTextColumn></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
